<style>
    .detail-gallery {
        position: relative;
        max-width: 600px;
        margin: 0 auto;
    }

    .product-image-slider {
        position: relative;
        margin-bottom: 15px;
        border-radius: 10px;
        overflow: hidden;
    }

    .main-image-container {
        position: relative;
        height: 500px;
        background: #f8f9fa;
    }

    .main-product-image,
    .secondary-product-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: contain;
        transition: opacity 0.3s ease;
    }

    .secondary-product-image {
        opacity: 0;
        z-index: 1;
    }

    .main-image-container:hover .secondary-product-image {
        opacity: 1;
    }

    .slider-nav-thumbnails {
        display: flex;
        gap: 10px;
        padding: 10px 0;
        overflow-x: auto;
    }

    .thumb-item {
        flex: 0 0 80px;
        border: 2px solid transparent;
        border-radius: 8px;
        overflow: hidden;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .thumb-item.active {
            border-color: #3BB77E;
        }

        .thumb-item img {
            width: 100%;
            height: 80px;
            object-fit: cover;
        }

</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        // Initialize Slick slider
        $('.product-image-slider').slick({
            slidesToShow: 1,
            slidesToScroll: 1,
            arrows: false,
            fade: true
        });

        // Thumbnail click handler with index mapping fix
        $('.thumb-item').on('click', function () {
            const index = $(this).find('img').data('index');
            $('.thumb-item').removeClass('active');
            $(this).addClass('active');

            if (index === 0 || index === 1) {
                // For primary or secondary thumbnail, always stay on slide 0
                $('.product-image-slider').slick('slickGoTo', 0);

                if (index === 0) {
                    // For primary thumbnail, update main image and secondary (if available)
                    const mainSrc = $(this).find('img').data('main-src');
                    const secondarySrc = $(this).find('img').data('secondary-src');
                    $('#mainImage').attr('src', mainSrc);
                    if (secondarySrc) {
                        $('#secondaryImage').attr('src', secondarySrc);
                    }
                } else if (index === 1) {
                    // For secondary thumbnail, update main image to show secondary image
                    const mainSrc = $(this).find('img').data('main-src');
                    $('#mainImage').attr('src', mainSrc);
                }
            } else {
                // For additional thumbnails, map index (starting at 2) to slider index (index - 1)
                const sliderIndex = index - 1;
                $('.product-image-slider').slick('slickGoTo', sliderIndex);
            }
        });

        $('.main-image-container').hover(
            function () {
                if ($('#secondaryImage').length) {
                    $(this).addClass('hover-active');
                }
            },
            function () {
                $(this).removeClass('hover-active');
            }
        );
    });


</script>