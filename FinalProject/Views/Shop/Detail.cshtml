                                    <div class="attr-detail attr-size mb-30">
                                        <strong class="mr-10">Specifications: </strong>
                                        <ul class="list-filter size-filter font-small">
                                            @if (!string.IsNullOrEmpty(Model.Product.Weight))
                                            {
                                                <li><span>@(Model.Product.Weight.ToString()+"kg")</span></li>
                                            }
                                            @if (!string.IsNullOrEmpty(Model.Product.Volume))
                                            {
                                                <li><span>@(Model.Product.Volume.ToString()+"l")</span></li>
                                            }
                                        </ul>
                                    </div>
                                }
                                

                                <div class="detail-extralink mb-50">
                                    <form method="post" asp-controller="Basket" asp-action="AddBasket" class="d-flex align-items-center gap-3">
                                        <input type="hidden" name="id" value="@Model.Product.Id" />

                                        <!-- Quantity Selector -->
                                        <div class="detail-qty border radius d-flex align-items-center">
                                            <a href="#" class="qty-down"><i class="fi-rs-angle-small-down"></i></a>
                                            <input type="number" class="qty-val" name="quantity" value="1" min="1"
                                                   max="@Model.Product.ProductBatches.Sum(pb => pb.Stock)" style="width: 50px;">
                                            <a href="#" class="qty-up"><i class="fi-rs-angle-small-up"></i></a>
                                        </div>

                                        <!-- Add to Cart Button -->
                                        <div class="product-extra-link2 d-flex align-items-center gap-2">
                                            <button type="submit" class="button button-add-to-cart"
                                            @(Model.Product.ProductBatches.Sum(pb => pb.Stock) == 0 ? "disabled" : "")>
                                                <i class="fi-rs-shopping-cart"></i>
                                                @(Model.Product.ProductBatches.Sum(pb => pb.Stock) == 0 ? "Out of Stock" : "Add to cart")
                                            </button>

                                            <!-- Wishlist and Compare -->
                                            <a aria-label="Add To Wishlist" class="action-btn hover-up" href="shop-wishlist.html">
                                                <i class="fi-rs-heart"></i>
                                            </a>

                                        </div>
                                    </form>
                                </div>


                                <div class="font-xs">
                                    <ul class="mr-50 float-start">
                                        <li class="mb-5">Brand: <span class="text-brand">@Model.Product.Brand.Name</span></li>
                                        <li class="mb-5">
                                            MFG: <span class="text-brand">
                                                @Model.Product.ProductBatches.FirstOrDefault()?.ManufacturingDate?.ToString("d")
                                            </span>
                                        </li>
                                        <li>
                                            LIFE: <span class="text-brand">
                                                @(lifeDays?.ToString() ?? "N/A") days
                                            </span>
                                        </li>
                                    </ul>
                                    <ul class="float-start">
                                        <li class="mb-5">SKU: @Model.Product.SKU</li>
                                        <li class="mb-5">
                                            Tags:
                                            @if (Model.Product.ProductTags.Any())
                                            {
                                                <span>
                                                    @foreach (var item in Model.Product.ProductTags)
                                                    {
                                                        <a href="#" rel="tag">@item.Tag.Name</a>
                                                        if (item != Model.Product.ProductTags.Last())
                                                        {
                                                            <span>, </span>
                                                        }
                                                    }
                                                </span>
                                            }
                                            else
                                            {
                                                <span>No tags</span>
                                            }
                                        </li>
                                        <li class="mb-5">
                                            Colors:
                                            @if (Model.Product.ProductColors.Any())
