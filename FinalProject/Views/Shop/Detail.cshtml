<main class="main">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a href="index.html" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
                <span></span> <a asp-controller="shop" asp-action="index">@Model.Product.Category.Name</a> <span></span> @Model.Product.Name
            </div>
        </div>
    </div>

    <div class="container mb-30">
        <div class="row">
            <div class="col-xl-10 col-lg-12 m-auto">
                <div class="product-detail accordion-detail">
                    <div class="row mb-50 mt-30">
                        <div class="col-md-6 col-sm-12 col-xs-12 mb-md-0 mb-sm-5">
                            <div class="detail-gallery">
                                <!-- Main Image Slider with Hover -->
                                <div class="product-image-slider">
                                    @if (Model.Product.ProductImages.Any())
                                    {
                                        <!-- Primary and Secondary Images Container -->
                                        <div class="main-image-container">
                                            <img id="mainImage"
                                                 src='@Url.Content("~/assets/imgs/shop/products/primary/" + Model.Product.ProductImages.First().Image)'
                                                 class="img-fluid rounded main-product-image"
                                                 alt="@Model.Product.Name" />

                                            @if (Model.Product.ProductImages.Count > 1)
                                            {
                                                <img id="secondaryImage"
                                                     src='@Url.Content("~/assets/imgs/shop/products/secondary/" + Model.Product.ProductImages[1].Image)'
                                                     class="img-fluid rounded secondary-product-image"
                                                     alt="@Model.Product.Name - Secondary" />
                                            }
                                        </div>

                                        <!-- Additional Images (if any) -->
                                        @foreach (var item in Model.Product.ProductImages.Skip(2))
                                        {
                                            <figure class="border-radius-10">
                                                <img src='@Url.Content("~/assets/imgs/shop/products/additional/" + item.Image)'
                                                     alt="product image"
                                                     data-thumb='@Url.Content("~/assets/imgs/shop/products/thumbnails/" + item.Image)' />
                                            </figure>
                                        }
                                    }
                                    else
                                    {
                                        <div class="no-image-placeholder">
                                            <span>No images available</span>
                                        </div>
                                    }
                                </div>

                                <!-- Thumbnail Navigation -->
                                <div class="slider-nav-thumbnails">
                                    @foreach (var (item, index) in Model.Product.ProductImages.Select((x, i) => (x, i)))
                                    {
                                        string folder = "";
                                        string dataMainSrc = "";
                                        string dataSecondarySrc = "";

                                        if (index == 0)
                                        {
                                            // Primary image thumbnail
                                            folder = "primary";
                                            dataMainSrc = Url.Content("~/assets/imgs/shop/products/primary/" + item.Image);
                                            if (Model.Product.ProductImages.Count > 1)
                                            {
                                                dataSecondarySrc = Url.Content("~/assets/imgs/shop/products/secondary/" + Model.Product.ProductImages[1].Image);
                                            }
                                        }
                                        else if (index == 1)
                                        {
                                            // Secondary image thumbnail
                                            folder = "secondary";
                                            dataMainSrc = Url.Content("~/assets/imgs/shop/products/secondary/" + item.Image);
                                            dataSecondarySrc = "";
                                        }
                                        else
                                        {
                                            // Additional image thumbnail
                                            folder = "additional";
                                            dataMainSrc = Url.Content("~/assets/imgs/shop/products/additional/" + item.Image);
                                            dataSecondarySrc = "";
                                        }
                                        <div class="thumb-item @(index == 0 ? "active" : "")">
                                            <img src='@Url.Content("~/assets/imgs/shop/products/" + folder + "/" + item.Image)'
                                                 alt="Thumbnail"
                                                 data-index="@index"
                                                 data-main-src="@dataMainSrc"
                                                 data-secondary-src="@dataSecondarySrc" />
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>


                        <div class="col-md-6 col-sm-12 col-xs-12">

                            <div class="detail-info pr-30 pl-30">

                                @{
                                    var totalStock = Model.Product.ProductBatches?.Sum(pb => pb.Stock) ?? 0;
                                    var firstBatch = Model.Product.ProductBatches?.FirstOrDefault();
                                    var lifeDays = firstBatch != null ? (firstBatch.ExpirationDate - firstBatch.ManufacturingDate)?.Days : null;
                                }

                                @if (totalStock == 0)
                                {
                                    <span class="stock-status out-stock">Out of Stock</span>
                                }
                                else if (Model.Product.DiscountPercentage > 0)
                                {
                                    <span class="stock-status out-stock">@Model.Product.DiscountPercentage% Off</span>
                                }

                                <h2 class="title-detail">@Model.Product.Name</h2>

                                @if (Model.Product.DiscountPercentage != 0)
                                {
                                    <div class="clearfix product-price-cover">
                                        <div class="product-price primary-color float-left">
                                            <span class="current-price text-brand">@Model.Product.DiscountPrice.ToString("C")</span>
                                            <span>
                                                <span class="save-price font-md color3 ml-15">@Model.Product.DiscountPercentage% Off</span>
                                                <span class="old-price font-md ml-15">@Model.Product.Price.ToString("C")</span>
                                            </span>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="clearfix product-price-cover">
                                        <div class="product-price primary-color float-left">
                                            <span class="current-price text-brand">@Model.Product.DiscountPrice.ToString("C")</span>

                                        </div>
                                    </div>
                                }


                                <div class="short-desc mb-30">
                                    <p class="font-lg">@(Model.Product.Description.Length > 200 ? Model.Product.Description.Substring(0, 200)+ "..." : Model.Product.Description)</p>
                                </div>

                                @if (!string.IsNullOrEmpty(Model.Product.Weight) || !string.IsNullOrEmpty(Model.Product.Volume))
