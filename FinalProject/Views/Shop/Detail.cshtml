                                                <span>
                                                    @foreach (var item in Model.Product.ProductColors)
                                                    {
                                                        <span class="color-chip" style="background-color: @item.Color;"></span>
                                                        <span>@item.Color.Name</span>
                                                        if (item != Model.Product.ProductColors.Last())
