<main class="main pages">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a asp-controller="home" asp-action="index" rel="nofollow"><i class="fi-rs-home mr-5"></i>Home</a>
                <span></span> Pages <span></span> Email Confirmation
            </div>
        </div>
    </div>
    <div class="page-content pt-150 pb-150">
        <div class="container">
            <div class="row">
                <div class="col-xl-4 col-lg-6 col-md-12 m-auto">
                    <div class="login_wrap widget-taber-content background-white">
                        <div class="padding_eight_all bg-white text-center">
                            <!-- Success Icon -->
                            <div class="mb-30">
                                <div class="icon-success">
                                    <i class="fi-rs-check-circle text-success" style="font-size: 4rem;"></i>
                                </div>
                            </div>

                            <!-- Success Message -->
                            <div class="heading_s1">
                                <h1 class="mb-20">Email Successfully Confirmed!</h1>
                                <p class="mb-30">Your email address has been verified. You can now access your account.</p>
                            </div>

                            <!-- Action Buttons -->
                            <div class="d-grid gap-3">
                                <a asp-controller="account" asp-action="login" class="btn btn-heading btn-block hover-up">
                                    <i class="fi-rs-sign-in mr-10"></i> Continue to Login
                                </a>

                                <a asp-controller="home" asp-action="index" class="btn btn-secondary btn-block hover-up">
                                    <i class="fi-rs-home mr-10"></i> Return to Home
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>