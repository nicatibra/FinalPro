@{
    ViewData["Title"] = "Suggest Products";
}

<h2>Suggest Products</h2>

<!-- Form to submit the meal name -->
<form method="post" asp-action="SuggestProducts">
    <div class="form-group">
        <label for="mealName">Enter a Meal Name:</label>
        <input type="text" class="form-control" id="mealName" name="mealName" required />
    </div>
    <button type="submit" class="btn btn-primary">Suggest Products</button>
</form>

<!-- Display the ingredients once the response is returned -->
@if (ViewBag.Ingredients != null)
{
    <h3>Suggested Ingredients for the Meal:</h3>
    <p>@ViewBag.Ingredients</p>
}

<!-- Handle error messages -->
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        <strong>Error:</strong> @ViewBag.Error
    </div>
}
