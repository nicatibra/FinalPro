<!-- Views/Gemini/SuggestProducts.cshtml -->
@model List<Product>

<div class="container mt-4">
    <h3>Suggested Ingredients:</h3>
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (product.ProductImages.Any())
                        {
                            <img src="@product.ProductImages.First().Image" class="card-img-top" alt="@product.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <form asp-controller="Basket" asp-action="AddBasket" method="post">
                                <input type="hidden" name="id" value="@product.Id" />
                                <button type="submit" class="btn btn-success">Add to Basket</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning">No products found for this meal.</div>
    }
</div>